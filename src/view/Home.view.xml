<mvc:View controllerName="cpro.ui5.__kunde__.__projekt__.controller.Home" displayBlock="true" xmlns:f="sap.f" xmlns:grid="sap.ui.layout.cssgrid" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc">
	<Page>
		<customHeader>
			<OverflowToolbar>
				<Image src="assets/logo.jpg" height="30px" />
				<Title text="{i18n>app-title}" />
				<ToolbarSpacer />
				<Button icon="sap-icon://key-user-settings" tooltip="Administration" press="openSettings" />
			</OverflowToolbar>

		</customHeader>

		<content>
			<f:GridList
			id="gridList"
			growing="true"
			growingThreshold="9">
			<f:headerToolbar>
				<Toolbar>
					<Title text="Halle Süd, Tor 1" />
					<ToolbarSpacer />
					<SearchField width="15rem" />
				</Toolbar>
			</f:headerToolbar>

			<f:customLayout>
				<grid:GridBoxLayout boxWidth="12rem" />
			</f:customLayout>

			<f:GridListItem>
				<VBox>
					<VBox class="sapUiSmallMargin">
						<layoutData>
							<FlexItemData growFactor="0" shrinkFactor="1" />
						</layoutData>
						<HBox justifyContent="SpaceBetween" class="sapUiSmallMarginBottom">
							<core:Icon
								src="sap-icon://windows-doors"
								size="2rem"
								color="Default"
								class="sapUiSmallMarginBottom" />
							<ObjectStatus text="{= ${door>/open} ? 'Geöffnet' : 'Geschlossen' }" state="{= ${door>/open} ? 'Success' : 'Warning' }" />
						</HBox>
						<Title text="Einfahrt Laderampe" wrapping="true" />
						<Label text="{= ${door>/open} ? 'Die Laderampe ist befahrbar' : 'Die Laderampe ist geschlossen' }" wrapping="true" />
					</VBox>
				</VBox>
			</f:GridListItem>
			<f:GridListItem>
				<VBox>
					<VBox class="sapUiSmallMargin">
						<layoutData>
							<FlexItemData growFactor="0" shrinkFactor="1" />
						</layoutData>
						<HBox justifyContent="SpaceBetween" class="sapUiSmallMarginBottom">
							<core:Icon
								src="sap-icon://shipping-status"
								size="2rem"
								color="Default"
								class="sapUiSmallMarginBottom" />
							<ObjectStatus text="{door>/trucks}" state="Success" />
						</HBox>
						<Title text="Wartende LKW" wrapping="true" />
						<Label text="Aktuell warten {door>/trucks} Lieferanten" wrapping="true" />
					</VBox>
				</VBox>
			</f:GridListItem>
		</f:GridList>
		</content>
		<footer>
			<OverflowToolbar>
				<Button icon="sap-icon://bell" text="{= ${messages>/collection}.length }" visible="{= ${messages>/collection}.length > 0 }" press="toggleMessageManager" />
				<ToolbarSpacer />
				<Button icon="sap-icon://hint" type="Ghost" press="onPressInfoButton" />
				<Button text="{i18n>label-save}" type="Accept" press="onPressSuccessButton" />
				<Button text="{i18n>label-cancel}" type="Reject" press="onPressCancelButton" />
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>